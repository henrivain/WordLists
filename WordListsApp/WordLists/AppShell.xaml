<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WordLists.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WordLists"
    xmlns:UIComponents="clr-namespace:WordListsUI;assembly=WordListsUI"
    xmlns:generator="clr-namespace:WordListsUI.ListGeneratorPage;assembly=WordListsUI"
    xmlns:welcome="clr-namespace:WordListsUI.WelcomePage;assembly=WordListsUI"
    xmlns:training="clr-namespace:WordListsUI.WordTrainingPage;assembly=WordListsUI"
    xmlns:info="clr-namespace:WordListsUI.AppInfoPage;assembly=WordListsUI"
    >

    <TabBar FlyoutDisplayOptions="AsMultipleItems">
        <!-- Welcome page -->

        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate local:MainPage}"
                      />


        <!-- Word training page -->
        <ShellContent Title="Training"
                      ContentTemplate="{DataTemplate training:WordTrainingPage}"
                      />

        <!-- Word list generator page -->
            
        <Tab Title="Generators" >
            <ShellContent Title="Create"
                          Route="Generators/Create"
                          ContentTemplate="{DataTemplate generator:ListGeneratorPage}"
                          />
        </Tab>


        <!-- App information page -->
        <ShellContent Title="About"
                      ContentTemplate="{DataTemplate info:AppInfoPage}"
                      />
    </TabBar>
    

</Shell>
