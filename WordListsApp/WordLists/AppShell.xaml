<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WordLists.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WordLists"
    Shell.FlyoutBehavior="Flyout"
    xmlns:UIComponents="clr-namespace:WordListsUI;assembly=WordListsUI"
    >

    <!-- Welcome page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" >
    </ShellContent>

    <!-- Word training page -->
    <ShellContent 
        Title="Header"
        ContentTemplate="{DataTemplate UIComponents:Header}"
        Route="Header"
        />
    
    <!-- Word list generator page -->
    <ShellContent
        Title="List generator"
        />

    <!-- App information page -->
    <ShellContent
        Title="About"
        />

</Shell>
