<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordListsUI.WordCollectionHandlingPage.WordCollectionHandlingPage"
             Title="Hallitse sanastoja"
             xmlns:viewModel="clr-namespace:WordListsViewModels;assembly=WordListsViewModels"
             BackgroundColor="{StaticResource PageBackground}"
             x:DataType="{x:Type viewModel:IWordCollectionHandlingViewModel}"
             >
    <ContentPage.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="TextColor" Value="Black"/>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>

        <Label Text="Muokkaa tai poista sanastoja"
               HorizontalTextAlignment="Center"
               />
    </VerticalStackLayout>
</ContentPage>