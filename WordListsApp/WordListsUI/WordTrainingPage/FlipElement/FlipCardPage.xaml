<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WordListsUI.WordTrainingPage.FlipElement"
             x:Class="WordListsUI.WordTrainingPage.FlipElement.FlipCardPage"
             VerticalOptions="CenterAndExpand"
             HorizontalOptions="CenterAndExpand"
             >
    <ContentView.Content>
        <local:CustomCard
            x:Name="card"
            HeightRequest="100"
            WidthRequest="200"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"
            BackgroundColor="White">
            <local:CustomCard.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </local:CustomCard.GestureRecognizers>

            <local:CustomCard.FrontSide>
                <local:FlipElementTopSide IsVisible="True"/>
            </local:CustomCard.FrontSide>

            <local:CustomCard.BackSide>
                <local:FlipElementBackSide IsVisible="False"/>
            </local:CustomCard.BackSide>
        </local:CustomCard>
    </ContentView.Content>
</ContentView>
